@model Category


<form method="post">
    <div class="container mt-2 p-3">
        <div class="row mb-1">
            <div class="col-12 mb-1">
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="col-12 mb-1">
                <input type="text" class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-12 mb-1">
                <label asp-for="DisplayOrder" class="form-label"></label>
            </div>
            <div class="col-12 mb-1">
                <input type="number" class="form-control" asp-for="DisplayOrder" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-plus-circle-dotted"></i> Create Category
                </button>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary border">
                    <i class="bi bi-arrow-left-circle"></i>   Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
            }