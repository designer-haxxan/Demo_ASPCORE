@model List<Category>



<div class="container mb-2">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle-dotted"></i> Create New Category
            </a>
        </div>
    </div>

</div>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.OrderBy(x=>x.DisplayOrder))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-1" asp-action="Edit" asp-route-Id="@item.Id" asp-controller="Category">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-Id="@item.Id" asp-controller="Category">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>
